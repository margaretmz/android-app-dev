<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uw.aad.mzm.sample.media" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AudioPlayActivity"
            android:label="@string/title_activity_audio_play" >
        </activity>
        <activity
            android:name=".AudioRecordActivity"
            android:label="@string/title_activity_audio_record" >
        </activity>
        <activity
            android:name=".VideoPlayActivity"
            android:label="@string/title_activity_video_play" >
        </activity>
        <activity
            android:name=".VideoRecordActivity"
            android:label="@string/title_activity_video_record" >
        </activity>
    </application>

</manifest>
